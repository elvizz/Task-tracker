@model IEnumerable<Qulix.Models.Users>

@{
    ViewBag.Title = "Список работников";
}

<h2>Список работников</h2>

<p>
    @Html.ActionLink("Добавить нового", "Create")
</p>
<table>
    <tr>
        <th>
            Номер
        </th>
        <th>
            Имя
        </th>
        <th>
            Фамилия
        </th>
        <th>
            Отчество
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ThirdName)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new {id=item.UserId}) |
            @Html.ActionLink("Удалить", "Delete", new {Id=item.UserId}, new{onclick="return confirm('Все задачи назначенные работнику будут удалены. Удалить исполнителя?');"})
        </td>
    </tr>
}

</table>
