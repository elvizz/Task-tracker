@model Qulix.Models.Tasks

@{
    ViewBag.Title = "Создать задачу";
}

<h2>Создать задачу</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Новая задача</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Job)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Job)
            @Html.ValidationMessageFor(model => model.Job)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.StartedOn)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.StartedOn)
            @Html.ValidationMessageFor(model => model.StartedOn)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Finished)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Finished)
            @Html.ValidationMessageFor(model => model.Finished)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.StateId)
        </div>
        <div class="editor-field">
            @Html.DropDownList("StateId",(IEnumerable<SelectListItem>)ViewData["States"])
            @Html.ValidationMessageFor(model => model.StateId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PersonId)
        </div>
        <div class="editor-field">
            @Html.DropDownList("PersonId",(IEnumerable<SelectListItem>)ViewData["Users"],"Выбрать")
            @Html.ValidationMessageFor(model => model.PersonId)
        </div>

        <p>
            <input type="submit" value="Создать" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Назад", "List")
</div>
